  addEmptyPathSpec = false
  pushNonFastForward = false
  statusHints = false

[alias]
  co = checkout
  br = branch
  ci = commit
  st = status

[blame]
  coloring = highlightRecent
  date = relative

[color "branch"]
  current  = magenta
  local    = default
  remote   = yellow
  upstream = green
  plain    = blue

[color "diff"]
  meta       = black bold
  frag       = magenta
  context    = white
  whitespace = yellow reverse

[core]
  compression = 9
  fsync = none
  whitespace = error
  editor = zeditor

[diff]
